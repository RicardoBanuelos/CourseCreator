@model IEnumerable<Course>

<div class="container">
    <div class="mt-2 col-md-12">
        <a asp-controller="Course" asp-action="Create" type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
            Create a new Course!
        </a>
    </div>
    <div class="row mt-2 col-md-12">
        @if (Model.Count() == 0)
        {
            <h2>No courses yet!</h2>
        }
        @foreach(var course in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@course.Thumbnail" width="100%" height="225" alt="Card image cap" />
                    <div class="card-body">
                        <p class="card-text">ID: @course.Id</p>
                        <p class="card-text"><b>@course.Title</b></p>
                        <div class="d-flex" justify-content-between align-items-center>
                            <a asp-controller="Course" asp-action="Content" asp-route-id="@course.Id" type="button" class="btn btn-sm btn-outline-secondary">Start Course</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
