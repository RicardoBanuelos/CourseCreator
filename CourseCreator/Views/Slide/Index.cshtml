@model IEnumerable<Slide>

<div class="container">
    <div class="mt-2 col-md-12">
        <a asp-controller="Slide" asp-action="Create" type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
            Create a new Slide!
        </a>
    </div>
    <div class="row mt-4 col-md-12">
        @if(Model.Count() == 0)
        {
            <h2>No slides yet!</h2>
        }
        @foreach(var slide in Model)
        {
            <div class="col-md-4" style="max-height: 200px; overflow: visible;">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <b class="card-text">@slide.Title</b>
                        <div class="d-flex" justify-content align-items-left>
                            <p>
                                @slide.Body.Substring(0, Math.Min(slide.Body.Length, 40))
                            </p>
                            @if (@slide.Body.Length > 50)
                            {
                                <p>...</p>
                            }
                        </div>
                        <small class="card-text">ID: @slide.Id</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
